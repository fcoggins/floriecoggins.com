  {% if flash[ 'error' ] %}
  <div id="feedback" class="fail">
    <div>{{ flash[ 'error' ] }}</div>
  </div>
  {% endif %}

  {% if flash[ 'success' ] %}
  <div id="feedback" class="success">
    <div>{{ flash[ 'success' ] }}</div>
  </div>
  {% endif %}

    <nav>
        <ul>
          <li><a href={{ baseUrl() }} {% block p_selected %}{% endblock p_selected%}>Projects</a></li>
          <li><a href = {{ siteUrl('/photos') }} {% block photos_selected %}{% endblock photos_selected%}>Photos</a></li>
          <li><a href = {{ siteUrl('/about') }} {% block about_selected %}{% endblock about_selected%}>About</a></li>
          <li><a href = {{ siteUrl('/contact') }} {% block contact_selected %}{% endblock contact_selected%}>Contact</a></li>
          <li><a href = "http://floriecoggins.pythonanywhere.com/">Blog</a></li>
        </ul>
      </nav>

    <header>    
      <a href={{ baseUrl() }} id="logo">
        <h1><img src = "img/logo.gif">Florie Coggins</h1>
        <h2>FRONT-END DEVELOPER</h2>
      </a>
    </header>
    <div id="wrapper">

      {% block content %}
      {% endblock content %}

      <footer>

        {% block footer %}
        <a href="http://twitter.com/willowcrestweb"><img src="img/twitter.png" alt="twitter" class="social-icon"></a>
        <a href="https://www.linkedin.com/in/fcoggins"><img src="img/linkedin.png" alt="linkedin" class="social-icon"></a>
        <a href="http://github.com/fcoggins"><img src="img/github.png" alt="github" class="social-icon"></a>
        <p>&copy; 2015 Florie Coggins.</p>
        {% endblock footer %}
      </footer>
    </div>
  </body>
</html>